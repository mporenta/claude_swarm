# Claude Agent SDK Configuration
# ================================
# Copy this file to .env and fill in your actual values
# The .env file should NOT be committed to version control

# REQUIRED: Anthropic API Key
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Logging Configuration
# ================================
# Logging verbosity: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug message output: true or false
SET_DEBUG=false

# Optional: Sentry Monitoring
# ============================
# Sentry DSN for error tracking and performance monitoring
# Get your DSN from: https://sentry.io/
# SENTRY_DSN=https://YOUR_KEY@YOUR_ORG.ingest.sentry.io/YOUR_PROJECT_ID
# Or for local Sentry: http://YOUR_KEY@localhost:9000/PROJECT_ID

# Sentry environment name: local, development, staging, production
# SENTRY_ENVIRONMENT=production

# Optional: Claude Model Configuration
# =====================================
# Model selection: sonnet, opus, haiku
# Default: sonnet (Claude 3.5 Sonnet)
CLAUDE_MODEL=sonnet

# Optional: Flask Configuration
# ==============================
# Flask environment: development, production
FLASK_ENV=development

# Custom path for Flask generated code
# If not set, defaults to: <project_root>/generated_code
# FLASK_PROJECT_PATH=/path/to/your/generated_code

# Optional: Airflow Configuration
# ================================
# Airflow installation directory
# AIRFLOW_HOME=/path/to/airflow

# Airflow DAGs folder location
# AIRFLOW__CORE__DAGS_FOLDER=/path/to/airflow/dags

# Optional: Python Configuration
# ===============================
# Additional Python module paths (colon-separated on Unix, semicolon on Windows)
# PYTHONPATH=/path/to/modules:/another/path

# Optional: Project Configuration
# ================================
# Project root directory (auto-detected if not set)
# PROJECT_ROOT=/path/to/claude_swarm

# Output directory for generated code (relative to project root)
# OUTPUT_DIR=generated_code
